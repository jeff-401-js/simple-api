{
  "openapi": "3.0.1",
  "info": {
    "title": "Core API",
    "description": "The worlds funnest little API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "paths": {
    "/categories": {
      "get": {
        "description": "Get all categories",
        "responses": {
          "200": {
            "description": "Returned a list of categories",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/getAll"
                }
              }
            }
          }
        }
      },
      "post": {
        "responses": {
          "200": {
            "description": "Modifies the list of categories",
          }
        }
      }
    },
    "/categories/{id}": {
      "get": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
            },
            "description": "Gets item based on id"
          }
        ],
        "responses": {
          "200": {
            "description": "Returned a list of specified categories",
          }
        }
      },
      "put": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
            },
            "description": "Gets item based on id"
          }
        ],
        "responses": {
          "200": {
            "description": "Returned a list of specified categories",
          }
        }
      },
      "delete": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
            },
            "description": "Gets item based on id"
          }
        ],
        "responses": {
          "200": {
            "description": "Returned a list of specified categories",
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "getAll": {
        "type": "object",
        "example": [
          "{}",
          "{}"
        ]
      }
    }
  }
}